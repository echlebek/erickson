<!DOCTYPE html>
<html lang="en">
  <head>
    {{ .Header }}
  </head>
  <body>
    <nav class="ericksonnav navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Erickson Code Review</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <div class="navbar-form navbar-right">
          {{ if .StatusOpen }}
            <button onClick="submitReview()" class="btn btn-submit">Submit Review</button>
            <button onClick="discardReview()" class="btn btn-discard">Discard Review</button>
          {{ else }}
            <button onClick="reopenReview()" class="btn btn-reopen">Re-open Review</button>
          {{ end }}
        </div>
      </div>
    </div>
    </nav>
    <div class="jumbotron">
      <div class="container">
        <h2>Review {{.ID}} - {{.Status}}</h2>
        <h3>{{.CommitMsg}}</h3>
        <div class="container container-fluid">
      </div>
    </div>
    <div class="container">
      {{ range $r, $revision := .R.Revisions }}
      <h3>Revision {{ $r }}</h3>
      {{ range $i, $f := $revision.Files }}
      <table style="width: 100%; display: table; border-width: thin; border-style: solid;" class="table table-condensed" id="diff">
        <td class="lineno"></td>
        <td class="fileheader"><pre class="blue code-pre"><code>--- {{ $f.OldName }}</code></pre></td>
        <td class="fileheader"><pre class="blue code-pre"><code>+++ {{ $f.NewName }}</code></pre></td>
        <td class="lineno"></td>
        {{ range $j, $hunk := $f.Hunks }}
        {{ range $k, $lhs := $hunk.LHS }}
        <tr style="padding: 0px; border: none">
          <td class="lineno {{ (index $hunk.LHS $k).Type }}">
            <pre class="code-pre"><code> {{ (index $hunk.LHS $k).Line }}</code></pre>
          </td>
          <td class="line {{ (index $hunk.LHS $k).Type }}">
            <pre class="code-pre"><code> {{ (index $hunk.LHS $k).Text }}</code></pre>
          </td>
          <td class="line {{ (index $hunk.RHS $k).Type }}">
            <pre class="code-pre"><code> {{(index $hunk.RHS $k).Text }}</code></pre>
          </td>
          <td class="lineno {{ (index $hunk.RHS $k).Type }}">
            <pre class="code-pre"><code> {{ (index $hunk.RHS $k).Line }}</code></pre>
          </td>
        </tr>
        {{ end }}
        <tr>
          <td class="lineno"><pre class="code-pre"><code>  &#10714;</code></pre></td>
          <td class="line unchanged"></td>
          <td class="line unchanged"></td>
          <td class="lineno"><pre class="code-pre"><code>  &#10715;</code></pre></td>
        </tr>
        {{ end }}
      </table>
      {{ end }}
      {{ end }}
    </div>
  </div>
</body>
</html>
